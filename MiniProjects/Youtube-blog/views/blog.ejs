<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog Page</title>
</head>
<body>
    <%- include('./partials/nav') %> 

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>"  width="850px" alt="">
        <pre class="mt-3"><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <img src="<%=blog.createdBy.profileImageURL%>" width="70px">
        <%= blog.createdBy.fullName %>
    </div>
    <div class="container mt-3">
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">  
                <div class="mb-3">
                    <input type="text" class="form-control" id="n=content" name="content" placeholder="Enter your Comment..">
                  </div>
                <button type="submit" class="btn btn-primary">Add</button>
              </form>
        <% } %>        
    </div>
    <div class="container mt-3">
        <% comments.forEach(comment => { %>
            <div>
                <img src="<%=blog.createdBy.profileImageURL%>" width="70px">
        <%= blog.createdBy.fullName %>: <pre><%= comment.content %></pre>
            </div>
        <% }) %>
    </div>


    
    <%- include('./partials/scripts') %>
</body>
</html>